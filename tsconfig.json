{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
  },
  "exclude": [
    "node_modules"
  ]
}
